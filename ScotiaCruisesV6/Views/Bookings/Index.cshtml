@model IEnumerable<ScotiaCruisesV6.Models.DB.Bookings>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NoAdults)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoChildren)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoInfants)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SailingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Route)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NoAdults)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoChildren)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoInfants)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SailingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Route.RouteName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BookingId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BookingId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BookingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
